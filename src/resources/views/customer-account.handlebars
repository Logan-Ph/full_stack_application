<body>
    {{#if check_customer}}
    {{> homepage_header}}
    {{/if}}



    {{#if check_vendor}}

    {{/if}}


    {{#if check_shipper}}

    {{/if}}
    <main>
        <div class="row">
            <div class="profile-sidebar col-4">
                <nav id="navbar-example3" class="h-100 flex-column align-items-stretch pe-4 border-end">
                    <nav class="sticky-top nav nav-pills flex-column">
                        <a class="nav-link" href="#item-1"><i class="fa-solid fa-gear"></i> <span
                                class="profile-sidebar-text">Manage Account</span></a>
                        <!--Only Customer has 'My Orders'-->
                        {{#if check_customer}}
                        <a class="nav-link" href="#item-2"><i class="fa-sharp fa-solid fa-file-invoice-dollar"></i>
                            <span class="profile-sidebar-text">My Orders</span></a>
                        <!---->
                        <a class="nav-link" href="/home"><i class="fa-solid fa-house"></i> <span
                                class="profile-sidebar-text">Home</span></a>
                        {{/if}}
                        <a class="nav-link" href="/logout"><i class="fa-solid fa-right-from-bracket"></i> <span
                                class="profile-sidebar-text">Log Out</span></a>
                        <nav class="nav nav-pills flex-column"></nav>
                    </nav>
                </nav>
                </nav>
            </div>

            <div class="profile-info col-8">
                <div data-bs-spy="scroll" data-bs-target="#navbar-example3" data-bs-smooth-scroll="true"
                    class="scrollspy-example-2" tabindex="0">
                    <div id="item-1" class="container mb-5 mt-3">
                        <h3>Manage Account</h3>
                        <hr>
                        <!--Customer Profile-->
                        {{#if check_customer}}
                        <div class="card">
                            <div class="card-header">
                                My Profile
                            </div>
                            <div class="card-body">
                                <div class="upload my-3">
                                    <img src="data:image/png;base64,{{loggedInUser.img}}" alt="user_image">
                                    <div class="round">
                                        <input type="file">
                                        <i class="fa fa-camera" style="color: #fff;"></i>
                                    </div>
                                </div>
                                <h5 class="card-title text-center pb-2">{{loggedInUser.username}}</h5>
                                <dl class="row">
                                    <dt class="col-sm-3">Name:</dt>
                                    <dd class="col-sm-9">{{loggedInUser.name}}</dd>

                                    <dt class="col-sm-3">Phone Number:</dt>
                                    <dd class="col-sm-9">(+84) {{loggedInUser.phone_number}}</dd>

                                    <dt class="col-sm-3">Address:</dt>
                                    <dd class="col-sm-9">{{loggedInUser.address}}</dd>
                                </dl>
                            </div>
                        </div>
                        {{/if}}
                        <!--Vendor Profile-->
                        {{#if check_vendor}}
                        <div class="card">
                            <div class="card-header">
                                My Profile
                            </div>
                            <div class="card-body">
                                <div class="upload my-3">
                                    <img src="data:image/png;base64,{{loggedInUser.img}}" alt="">
                                    <div class="round">
                                        <input type="file">
                                        <i class="fa fa-camera" style="color: #fff;"></i>
                                    </div>
                                </div>
                                <h5 class="card-title text-center pb-2">{{loggedInUser.username}}</h5>
                                <dl class="row">
                                    <dt class="col-sm-3">Business Name:</dt>
                                    <dd class="col-sm-9">{{loggedInUser.bussiness_name}}</dd>

                                    <dt class="col-sm-3">Business Phone Number:</dt>
                                    <dd class="col-sm-9">(+84) {{loggedInUser.phone_number}}</dd>

                                    <dt class="col-sm-3">Business Address:</dt>
                                    <dd class="col-sm-9">{{loggedInUser.bussiness_address}}</dd>
                                </dl>
                            </div>
                        </div>
                        {{/if}}
                        <!--Shipper Profile-->
                        {{#if check_shipper}}
                        <div class="card">
                            <div class="card-header">
                                My Profile
                            </div>
                            <div class="card-body">
                                <div class="upload my-3">
                                    <img src="data:image/png;base64,{{loggedInUser.img}}" alt="">
                                    <div class="round">
                                        <input type="file">
                                        <i class="fa fa-camera" style="color: #fff;"></i>
                                    </div>
                                </div>
                                <h5 class="card-title text-center pb-2">{{loggedInUser.username}}</h5>
                                <dl class="row">
                                    <dt class="col-sm-3">Name:</dt>
                                    <dd class="col-sm-9">{{loggedInUser.name}}</dd>

                                    <dt class="col-sm-3">Phone Number:</dt>
                                    <dd class="col-sm-9">(+84) {{loggedInUser.phone_number}}</dd>

                                    <dt class="col-sm-3">Distribution Hub:</dt>
                                    <dd class="col-sm-9">{{loggedInUser.distribution_hub}}</dd>
                                </dl>
                            </div>
                        </div>
                        {{/if}}
                    </div>

                    {{#if check_customer}}
                    <!--Only Customer has 'My Orders'-->
                    <div id="item-2" class="container my-5">
                        <h3>My Orders</h3>
                        <hr>
                        <div class="order-wrapper container mb-3">
                            <div class="order-shop pt-3"></div>
                            <hr>
                            <div class="order-content">
                                <div class="order-details">
                                {{#if products}}
                                    {{#each products}}
                                    <div class="order-columns">
                                        <div class="order-info-product px-3">
                                            <h4>{{this.product_name}}</h4>
                                            <p>Category: {{this.category}}
                                                <br>Quantity: 1
                                            </p>
                                        </div>
                                        <div class="order-product-img">
                                            <div>
                                                <img src="data:image/png;base64,{{this.img}}" alt="">
                                            </div>
                                        </div>
                                        <div class="order-product-price">
                                            <p>${{this.price}}</p>
                                        </div>
                                    </div>
                                    <!--If there are more products-->
                                    <hr>
                                    {{/each}}
                                {{else}}
                                <p>No orders yet</p>
                                {{/if}}
                            <div class="order-total pb-3">
                                Total: ${{total_spent}}
                            </div>
                        </div>
                        {{/if}}

                    </div>
                </div>
            </div>
    </main>


    {{#if check_customer}}
    {{> footer}}
    {{/if}}



    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js" integrity="sha384-zYPOMqeu1DAVkHiLqWBUTcbYfZ8osu1Nd6Z89ify25QV9guujx43ITvfi12/QExE" crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js" integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ" crossorigin="anonymous"></script>
    <!--Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
</body>

</html>