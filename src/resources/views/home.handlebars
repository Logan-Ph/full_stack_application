<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>

    {{!-- Bootstrap --}}
    <link href="https:/cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    {{!-- Css --}}
    <link href="css/homepage.css" rel="stylesheet">
    {{!-- fontawsome embedded --}}
    <script src="https:/kit.fontawesome.com/3b3da2da02.js" crossorigin="anonymous"></script>
</head>

<body>
    {{> homepage_header}}
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="image/lzd-beauty.jpg" class="d-block w-100" alt="lzd-beauty">
            </div>
            <div class="carousel-item">
                <img src="image/lzd-deevices.jpg" class="d-block w-100" alt="lzd-devices">
            </div>
            <div class="carousel-item">
                <img src="image/lzd-random.jpg" class="d-block w-100" alt="lzd-random-stuffs">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>


    {{!-- feature nav --}}
    <div class="feature-nav">
        <div class="container feature">
            <div class="row">
                <div class="tmai_col col-xl-3 col-lg-6 col-sm-12">
                    <div class="feature-card">
                        <a class="feature-navigation" href="#Electonic_Products">
                            <div class="img-wrapper">
                                <img src="image/responsive.png" alt="electronic-devices" width="30px">
                            </div>
                            <div class="text-wrapper">
                                <p>Devices</p>
                            </div>
                        </a>
                    </div>

                </div>
                <div class="tmai_col col-xl-3 col-lg-6 col-sm-12">
                    <div class="feature-card">
                        <a class="feature-navigation" href="#Cosmetics_Products">
                            <div class="img-wrapper">
                                <img src="image/lipstick.png" alt="lipstick" width="30px">
                            </div>
                            <div class="text-wrapper">
                                <p>Cosmetics</p>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="tmai_col col-xl-3 col-lg-6 col-sm-12">
                    <div class="feature-card">
                        <a class="feature-navigation" href="#promotion_product">
                            <div class="img-wrapper">
                                <img src="image/discount.png" alt="discount" width="30px">
                            </div>
                            <div class="text-wrapper">
                                <p>Flash Sale</p>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="tmai_col col-xl-3 col-lg-6 col-sm-12">
                    <div class="feature-card">
                        <a class="feature-navigation" href="#Payment_Voucher">
                            <div class="img-wrapper">
                                <img src="image/voucher.png" alt="lipstick" width="30px">
                            </div>
                            <div class="text-wrapper">
                                <p>Vouchers</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>


    {{!-- Product --}}
    <div id="about" class="about section-padding mt-5 mb-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-12 col-sm-12">
                    <div class="about-img">
                        <img class="img-fluid" src="image/lzd-mall.jpg">
                    </div>
                </div>
                <div class="col-lg-6 col-md-12 col-sm-12 text-center">
                    <div class="about-text">
                        <h2>Lazada Mall</h2>
                        <h4>We provide the best quality and services</h4>

                        <div class="statements">

                            <div class="statement-item">
                                <img class="statement-icon" src="image/authenticity.png" alt="authenticity-logo"
                                    width="40px">
                                <span class="statement-title">100% Authentic</span>
                            </div>

                            <div class="statement-item">
                                <img class="statement-icon" src="image/free-shipping (1).png" alt="free-shipping logo"
                                    width="40px">
                                <span class="statement-title">Free Shipping</span>
                            </div>

                            <div class="statement-item">
                                <img class="statement-icon" src="image/promotions.png" alt="promotions logo"
                                    width="40px">
                                <span class="statement-title">Unbeatable Price</span>
                            </div>
                        </div>

                        <div class="brand">
                            <div class="statement-item">
                                <img class="statement-icon" src="image/samsung.png" alt="samsung-logo" width="80px">
                            </div>

                            <div class="statement-item">
                                <img class="statement-icon" src="image/sony.png" alt="sony-logo" width="80px">
                            </div>

                            <div class="statement-item">
                                <img class="statement-icon" src="image/apple.png" alt="apple-logo" width="80px">
                            </div>

                            <div class="statement-item">
                                <img class="statement-icon" src="image/oppo.png" alt="oppo-logo" width="80px">
                            </div>

                            <div class="statement-item">
                                <img class="statement-icon" src="image/panasonic.png" alt="panasonic-logo" width="80px">
                            </div>
                        </div>

                        <div class="brand">
                            <div class="statement-item">
                                <img class="statement-icon" src="image/shiseido.png" alt="shiseido-logo" width="100px">
                            </div>

                            <div class="statement-item">
                                <img class="statement-icon" src="image/loreal.png" alt="loreal-logo" width="80px">
                            </div>

                            <div class="statement-item">
                                <img class="statement-icon" src="image/mac.png" alt="mac-logo" width="80px">
                            </div>

                            <div class="statement-item">
                                <img class="statement-icon" src="image/dior.png" alt="promotions logo" width="80px">
                            </div>

                            <div class="statement-item">
                                <img class="statement-icon" src="image/nars.png" alt="promotions logo" width="80px">
                            </div>
                        </div>
                        <a href="#" class="tmai_btn_warning btn btn-warning mt-2">Learn More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


{{!-- On sale product section --}}

    <div class="mai container">
        <div class="announcement detail">
            <img src="image/discount.png" alt="promotion-icon" width="35px">
            <h1>On Sale Products</h1>
        </div>
        <hr class="line">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            <div class="col">
                <div class="card">
                    <span class="hot">
                            <img src="image/promotional.png" alt="promotional-icon" width="35px">
                        </span>
                        <div class="on-sale-product-img">
                            <img src="image/son.jpg" class="card-img-top" alt="mac-lipstick">
                        </div>
                        <div class="homepage_card_body card-body">
                            <h5 class="card-title">Mac Lipstick
                            </h5>
                            <p class="new-price">$33.64</p>
                            <p><span class="old-price">$35.39</span><span class="promotion">-5%</span></p>
                            <a href="#" class="tmain_btn_warning btn btn-warning">More Details</a>
                        </div>
                </div>
            </div>
            <div class="col">
                <div class="card">
                        <span class="hot">
                            <img src="image/promotional.png" alt="promotional-icon" width="35px">
                        </span>
                        <div class="on-sale-product-img">
                            <img src="image/loreal-serum.png" class="card-img-top" alt="loreal serum">
                        </div>
                        <div class="homepage_card_body card-body">
                            <h5 class="card-title">L'Oreal Serum
                            </h5>
                            <p class="new-price">$21.40</p>
                            <p><span class="old-price">$25.16</span><span class="promotion">-15%</span></p>
                            <a href="#" class="tmain_btn_warning btn btn-warning">More Details</a>
                        </div>
                </div>
            </div>

            <div class="col">
                <div class="card">
                        <span class="hot">
                            <img src="image/promotional.png" alt="promotional-icon" width="35px">
                        </span>
                        <div class="on-sale-product-img" width="314px" , height="314px">
                            <img src="image/sheseido-cream.jpg" class="card-img-top" alt="shiseido-cream"
                                width="inherit" , height="inherit">
                        </div>
                        <div class="homepage_card_body card-body">
                            <h5 class="card-title">Shiseido Hydrating Cream
                            </h5>
                            <p class="new-price">$51.17</p>
                            <p><span class="old-price">$63.96</span><span class="promotion">-20%</span></p>
                            <a href="#" class="tmain_btn_warning btn btn-warning">More Details</a>
                        </div>
                </div>
            </div>

            <div class="col">
                <div class="card">
                        <span class="hot">
                            <img src="image/promotional.png" alt="promotional-icon" width="35px">
                        </span>
                        <div class="on-sale-product-img" width="314px" , height="314px">
                            <img src="image/nyx.jpg" class="card-img-top" alt="mac-lipstick" width="inherit" ,
                                height="inherit">
                        </div>
                        <div class="homepage_card_body card-body">
                            <h5 class="card-title">NYX Foundation
                            </h5>
                            <p class="new-price">$16.2</p>
                            <p><span class="old-price">$18.00</span><span class="promotion">-10%</span></p>
                            <a href="#" class="tmain_btn_warning btn btn-warning">More Details</a>
                        </div>
                </div>
            </div>
        </div>
    </div>

    {{!--first-carouselIndicators --}}
    <div class="container">
        <div class="announcement" id="Payment_Voucher">
            <img src="image/voucher.png" alt="promotional-icon" width="35px">
            <h1>Payment Vouchers</h1>
        </div>
        <hr class="line">
        <div id="carouselExampleIndicators" class="carousel slide mb-10" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3"
                    aria-label="Slide 4"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="image/banner2.jpg" class="d-block w-100" alt="lzd-beauty">
                </div>
                <div class="carousel-item">
                    <img src="image/banner1.jpg" class="d-block w-100" alt="lzd-devices">
                </div>
                <div class="carousel-item">
                    <img src="image/banner3.jpg" class="d-block w-100" alt="lzd-random-stuffs">
                </div>
                <div class="carousel-item">
                    <img src="image/banner4.jpg" class="d-block w-100" alt="lzd-random-stuffs">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

    {{!-- category --}}
    {{!-- cosmetics --}}
    <div class="mai container">
        <div class="announcement detail" id="Cosmetics_Products">
            <img src="image/lipstick.png" alt="lipstick-icon" width="35px">
            <h1>Beauty Products</h1>
        </div>
        <hr class="line">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 my-4 pb-5 g-4">
            {{#each products}}
            {{#if (ifeq this.category 'cosmetics')}}
            <div class="col-4 my-4">
                <div class="card">
                    <a href="/home/{{this._id}}/product-detail" class="product_detail">
                        <div class="product-img">
                            <img src="data:image/png;base64,{{this.img}}" class="card-img-top" alt="..." width="inherit"
                                , height="inherit">
                        </div>
                        <div class="card-body">
                            <h5 class="product_name card-title">{{this.product_name}}</h5>
                            <p class="product_price price">$ {{this.price}}</p>
                            <div class="stars">
                                <i class="fa-solid fa-star" style="color: #ffdd00;"></i>
                                <i class="fa-solid fa-star" style="color: #ffdd00;"></i>
                                <i class="fa-solid fa-star" style="color: #ffdd00;"></i>
                                <i class="fa-solid fa-star" style="color: #ffdd00;"></i>
                                <i class="fa-solid fa-star" style="color: #ffdd00;"></i>
                            </div>
                            <a href="/home/{{this._id}}/product-detail" class="tmain_btn_warning btn btn-warning mt-2">More Details</a>
                        </div>
                    </a>
                </div>
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>

    {{!-- electronic devices --}}
    <div class="mai container">
        <div class="announcement detail" id="Electonic_Products">
            <img src="image/responsive.png" alt="responsive-icon" width="35px">
            <h1>Electronic Devices</h1>
        </div>
        <hr class="line">
        <div class="row row-cols-1 row-cols-md-2 row-cols-xl-5 g-4">
            {{#each products}}
            {{#if (ifeq this.category 'electronic-devices')}}
            <div class="col">
                <div class="card">
                    <a href="/home/{{this._id}}/product-detail" class="product_detail">
                        <div class="product-img">
                            <img src="data:image/png;base64,{{this.img}}" class="card-img-top" alt="..." width="inherit"
                                , height="inherit">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title sub">{{this.product_name}}</h5>
                            <p class="price">${{this.price}}</p>
                            <div class="stars">
                                <i class="fa-solid fa-star" style="color: #ffdd00;"></i>
                                <i class="fa-solid fa-star" style="color: #ffdd00;"></i>
                                <i class="fa-solid fa-star" style="color: #ffdd00;"></i>
                                <i class="fa-solid fa-star" style="color: #ffdd00;"></i>
                                <i class="fa-solid fa-star" style="color: #ffdd00;"></i>
                            </div>
                             <a href="/home/{{this._id}}/product-detail" class="tmain_btn_warning btn btn-warning mt-2">More Details</a>
                        </div>
                    </a>
                </div>
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>

    {{> footer}}



    {{!--Bootstrap 5--}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js"
        integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ"
        crossorigin="anonymous"></script>


</body>