<body>
    {{> homepage_header}}
    <div class="container my-5" id="product-detail">
        {{#each products}}

        <nav class="ms-5" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/home">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{this.product_name}}</li>
            </ol>
        </nav>
        <div class="container px-5 justify-content-center">
            <div class="row bg-light">
                <div class="col-md-5 p-3">
                    <img class="img-fluid border border-secondary-subtle" src="data:image/png;base64,{{this.img}}"
                        alt="">
                </div>
                <div class="col-md-7">
                    <h4 class="mt-4 ms-3 fs-2">{{this.product_name}}</h4>
                    <div class="row text-center my-3 ms-md-0 ms-sm-1">
                        <div class="col-lg-3 col-4 border-end" id="rating">
                            5.0 <br><i class="fa-solid fa-star fa-xs"></i><i class="fa-solid fa-star fa-xs"></i><i
                                class="fa-solid fa-star fa-xs"></i><i class="fa-solid fa-star fa-xs"></i><i
                                class="fa-solid fa-star fa-xs"></i>
                        </div>
                        <div class="col-lg-3 col-4 border-end">
                            <span class="fw-bold">200 </span> Ratings
                        </div>
                        <div class="col-lg-3 col-4">
                            <span class="fw-bold">1K </span> Sold
                        </div>
                    </div>
                    <h1 class="price mt-4 ms-3 fs-3">${{this.price}}</h1>
                    <form class="quantity mt-3" action="" method="post">
                        <label class="ms-3 fw-bold" for="quantity">Quantity: </label>
                        <input type="number" id="quantity" name="quantity" min="1" max="100" value="1"> 
                        <div class="row mt-4 mx-3 " id="button-container">
                            <button class="col-4 btn add-to-cart" type="submit" value="Add To Cart"><i class="fa-solid fa-cart-plus"></i> Add To Cart</button>
                            <button class="col-4 ms-4 btn buy-now" type="submit" value="Buy Now">Buy Now</button> 
                        </div>  
                    </form>
                </div>
            </div>
            <div class="row bg-light text-center" id="product-detail-bottom">
                <div class="col-lg-5">
                    <div class="row mt-2">
                        <div class="col border-end">Share: <a href=""><i class="fa-brands fa-facebook fa-lg"></i></a> <a
                                href=""><i class="fa-brands fa-facebook-messenger fa-lg"></i></a> <a href=""><i
                                    class="fa-brands fa-instagram fa-lg"></i></a> <a href=""><i
                                    class="fa-brands fa-twitter fa-lg"></i></a></div>
                        <div class="col"><i class="fa-regular fa-heart"></i> Add To Favorites</div>
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="row my-2">
                        <div class="col text-center border-end"><i class="fa-solid fa-rotate-left"></i> 7 Days Return
                        </div>
                        <div class="col text-center border-end"><i class="fa-solid fa-rotate-left"></i> Authenticity
                            Guarantee</div>
                        <div class="col text-center border-end"><i class="fa-solid fa-truck-fast"></i> Free Shipping</div>
                    </div>
                </div>
            </div>
            <div class="row mt-5 bg-light">
                <div class="col-sm-2 col-3">
                    <img class="shop-pic my-4 ms-3" src="https://static.vecteezy.com/system/resources/previews/000/583/708/original/online-shop-icon-vector.jpg" alt="shop profile pic">
                </div>
                <div class="col-md-3 col-9" id="shop-section">
                    <p class="mt-4 mb-0 fs-4 fw-bold btn-sm">{{this.owner}}</p>
                    <p class="text-secondary">Active 1 Hour Ago</p>
                    <a href="" class="btn btn-danger text-white fw-500 mb-4" type="button">Visit Shop</a>
                </div>
                <div class="col-md-7 col-12">
                    <div class="row" id="shop-section-right">
                        <div class="col-3 my-md-5">
                            <p class="text-secondary ">Reviews: <span class="value">30K</span></p>
                            <p class="text-secondary ">Products: <span class="value">30</span></p>
                        </div>
                        <div class="col-5 my-md-5">
                            <p class="text-secondary ">Response Rate: <span class="value">100%</span></p>
                            <p class="text-secondary ">Response Time: <span class="value">within hours</span></p>
                        </div>
                        <div class="col-4 my-md-5">
                            <p class="text-secondary ">Joined: <span class="value">1y</span></p>
                            <p class="text-secondary ">Followers: <span class="value">300K</span></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row product-detail-description mt-5 bg-light">
                <h4 class="ms-3 mt-4">Product Description:</h4>
                <p class="ms-3 fs-6">{{this.description}}</p>
            </div>
            {{/each}}
            <div class="row mt-5 bg-light">
                <div class="p-3">
                    <h4 class="ms-3 mt-2">Product Ratings:</h4>
                    <div class="row mt-3 mx-3 border-bottom">
