<body>
    {{> homepage_header}}

     <div class="container-fuild p-0 mt-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb p-3 bg-body-tertiary rounded-3">
                <li class="breadcrumb-item">
                    <a class="link-body-emphasis" href="/home">Home
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a class="link-body-emphasis fw-semibold text-decoration-none" href="#">Results</a>
                </li>
            </ol>
        </nav>
    </div>

    <div class="search container">
        <div class="search info row">
            <div class="search-info col-md-8 themed-grid-col mb-3">
                <h3> Search results for "{{searchTerm}}"</h3>
            </div>
            <div class="col-md-4 themed-grid-col mb-3">
                <div class="filter justify-content-start">
                    <div class="sort-by-name ">
                        <span class="text-center pe-3">Sort By:</span>
                    </div>
                    <div class="sort-by dropdown">
                        <a class=" bestmatch nav-link dropdown-toggle p-1 rounded" href="#" id="navbarDropdownMenuLink" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Best Match
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" href="/search?q={{searchTerm}}">Best Matched</a></li>
                            <li><a class="dropdown-item" href="/search?q={{searchTerm}}&sort=price_low">Price Low to High</a></li>
                            <li><a class="dropdown-item" href="/search?q={{searchTerm}}&sort=price_high">Price High to Low</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="search-result">
                    <div class="search-info">
                        <span class="detailed-result">{{products.length}} items found for "{{searchTerm}}"</span>
                    </div>
                </div>
            </div>
            
        </div>


        </div>
        <div class="container">
            {{!-- Books products go here --}}
            {{#if products.length}}
            <ul>
                {{#each products}}
                <li>{{this.product.product_name}}</li>
                {{/each}}
            </ul>
            {{else}}
            <p>No results found.</p>
            {{/if}}
            {{#if products.length}}
            <div class="row mb-3">
            {{#each products}}
                <div class="col-md-4 themed-grid-col mb-3">
                    <div class="card">
                        <a href="/home/{{this._id}}/product-detail" class="product_detail">
                            <div class="product-img">
                                <img src="data:image/png;base64,{{this.img}}" class="card-img-top" alt="...">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title sub">{{this.product_name}}</h5>
                                <p class="price">$ {{this.price}}</p>
                                <div class="stars">
                                    <i class="fa-solid fa-star" style="color: #ffdd00;"></i>
                                    <i class="fa-solid fa-star" style="color: #ffdd00;"></i>
                                    <i class="fa-solid fa-star" style="color: #ffdd00;"></i>
                                    <i class="fa-solid fa-star" style="color: #ffdd00;"></i>
                                    <i class="fa-solid fa-star" style="color: #ffdd00;"></i>
                                </div>
                                <a href="#" class="tmain_btn_warning btn btn-warning mt-2">More Details</a>
                            </div>
                        </a>
                    </div>
                </div>
            {{/each}}
            </div>
            {{/if}}

        </div>
    </div>
    {{> footer}}

</body>