<body>
    <div class="container my-5">
        <nav class="navbar fixed-top bg-body-tertiary px-0">
            <div class="container" id="shipper">
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas"
                    data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="fw-semibold fs-1"> Lazada Shipper</div>
                <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar"
                    aria-labelledby="offcanvasNavbarLabel">
                    <div class="offcanvas-header border-bottom">
                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Menu</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/shipper"> <i
                                        class="fa-solid fa-circle fa-beat-fade fa-xs"></i>Active Orders</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/customer-account"><i class="fa-solid fa-circle-user"></i> My Account</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/logout"><i class="fa-solid fa-right-from-bracket"></i> Log
                                    out</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </div>
    <div class="py-5" id="content">
        <div class="row mx-2 justify-content-center">
            <div class="col-lg-4 col-sm-6 col-10 mb-2">
                <div class="p-3 bg-white shadow-sm d-flex justify-content-around align-items-center rounded flex-wrap">
                    <div>
                        <h3 class="total_order fs-2"></h3>
                        <p class="fs-5">Active Orders</p>
                    </div>
                    <i class="fa-solid fa-boxes-stacked fs-1 primary-text rounded-full secondary-bg p-3"></i>
                </div>
            </div>
        </div>
        <h2 class="my-3">Active Orders</h2>
        <div class="container-fluid">
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search Orders" aria-label="Search">
                <button class="btn #shipper-search-button" type="submit"><i
                        class="fa-solid fa-magnifying-glass fa-xl"></i></button>
            </form>
        </div>
        <div class="table-responsive mx-4 mt-3 shadow-sm">
            <table class="table table-striped mb-0">
                <thead>
                    <tr>
                        <th class="col-5" scope="col">Tracking Number</th>
                        <th scope="col">Address</th>
                        <th class="col-2" scope="col">Status</th>
                        <th class="col-1" scope="col">Edit</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    {{#each customer_list}}
                    <tr>
                        <th scope="row">{{this.id}}</th>
                        <td>{{this.address}}</td>
                        <td class="text-success"><i class="fa-solid fa-circle fa-beat-fade fa-xs"></i> Active</td>
                        <td><a href="/{{this.id}}/parcel-info"><i class="fa-solid fa-pen-to-square"></i></a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    <script>
        let order = document.querySelectorAll(".text-success");
        let total_order = document.querySelector(".total_order")

        let order_length = order.length
        total_order.innerText = order_length
    </script>
</body>

</html>